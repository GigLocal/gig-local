@page
@model GigsModel

<div class="p-5 bg-light rounded-3 text-center">
    <div class="container-fluid py-3">
        <h1 class="display-5 fw-bold">Gigs</h1>
        <p class="fs-4">
            @ViewData["Description"]
        </p>
    </div>
</div>
<br>
<div class="row row-cols-1 row-cols-md-3">
    @foreach (var gig in Model.Gigs)
    {
        <div class="col mb-4">
            <div class="card h-100 shadow">
                <img class="card-img-top" src="@gig.Image" width="640" height="360" alt="Image of music artist @gig.ArtistName.">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="@gig.EventUrl" class="stretched-link text-reset">@gig.ArtistName</a>
                    </h5>
                    <h6 class="fw-bold">@gig.DateTime</h6>
                    <h6 class="text-secondary">@gig.VenueName</h6>
                    <p>@gig.Description</p>
                </div>
            </div>
        </div>
    }
</div>
