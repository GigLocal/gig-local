@page
@model VenuesModel

<div class="p-5 bg-light rounded-3 text-center">
    <div class="container-fluid py-3">
        <h1 class="display-5 fw-bold">Venues</h1>
        <p class="fs-4">
            @ViewData["Description"]
        </p>
    </div>
</div>
<br>
<div class="row row-cols-1 row-cols-md-3">
    @foreach (var venue in Model.Venues)
    {
        <div class="col mb-4">
            <div class="card h-100 shadow">
                <img class="card-img-top" src="@venue.ImageUrl" width="640" height="360" alt="Image of live music venue @venue.Name.">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="@venue.Url" class="stretched-link text-reset">@venue.Name</a>
                    </h5>
                    <h6 class="text-secondary">@venue.Address</h6>
                    <p>@venue.Description</p>
                </div>
            </div>
        </div>
    }
</div>
