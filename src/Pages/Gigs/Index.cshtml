@page
@model GigLocal.Pages.Gigs.IndexModel

@{
    ViewData["Title"] = "Gigs";
}

<h2>Gigs</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Gigs[0].ArtistName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gigs[0].VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gigs[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gigs[0].TicketPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gigs[0].TicketWebsite)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Gigs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtistName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketPrice)
                </td>
                <td>
                    <a href="@item.TicketWebsite" target="_blank" rel="noopener noreferrer">@item.TicketWebsite</a>
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.Gigs.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Gigs.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Gigs.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Gigs.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">
    Next
</a>
