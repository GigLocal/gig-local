@page
@model GigLocal.Pages.Admin.Gigs.DetailsModel

<h1>Details</h1>

<div>
    <h4>Gig</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.ArtistName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gig.ArtistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.VenueName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gig.VenueName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gig.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gig.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.EventUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gig.EventUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Gig.ImageUrl" height="150">
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-secondary" role="button" asp-page="./Index">Back</a>
    <a class="btn btn-primary" role="button" asp-page="./Edit" asp-route-id="@Model.Gig.ID">Edit</a>
    @if (!Model.Gig.Approved)
    {
        <a class="btn btn-success" role="button" asp-page="./Approve" asp-route-id="@Model.Gig.ID">Approve</a>
    }
</div>
