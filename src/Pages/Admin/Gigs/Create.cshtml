@page
@model GigLocal.Pages.Admin.Gigs.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<h2>Create</h2>

<h4>Gig</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gig.ArtistID" class="control-label"></label>
                <select asp-for="Gig.ArtistID" asp-items="Model.Artists" class="custom-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="Gig.VenueID" class="control-label"></label>
                <select asp-for="Gig.VenueID" asp-items="Model.Venues" class="custom-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="Gig.Date" class="control-label"></label>
                <input asp-for="Gig.Date" class="form-control" placeholder="yyyy-mm-dd" />
                <span asp-validation-for="Gig.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gig.TicketPrice" class="control-label"></label>
                <input asp-for="Gig.TicketPrice" class="form-control" />
                <span asp-validation-for="Gig.TicketPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gig.TicketWebsite" class="control-label"></label>
                <input asp-for="Gig.TicketWebsite" class="form-control" />
                <span asp-validation-for="Gig.TicketWebsite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-secondary" role="button" asp-page="Index">Cancel</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        setDateInputMinToToday("Gig.Date");
    </script>
}
