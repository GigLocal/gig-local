@page
@model GigLocal.Pages.Admin.Gigs.CreateWithArtistModel

@{
    ViewData["Title"] = "Create with Artist";
    Layout = "_AdminLayout";
}

<h2>Create</h2>

<h4>Gig</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3>Artist</h3>
            <div class="form-group">
                <label asp-for="Gig.ArtistName" class="control-label"></label>
                <input asp-for="Gig.ArtistName" class="form-control" />
                <span asp-validation-for="Gig.ArtistName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gig.ArtistDescription" class="control-label"></label>
                <input asp-for="Gig.ArtistDescription" class="form-control" />
                <span asp-validation-for="Gig.ArtistDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gig.ArtistWebsite" class="control-label"></label>
                <input asp-for="Gig.ArtistWebsite" class="form-control" />
                <span asp-validation-for="Gig.ArtistWebsite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gig.FormFile"></label>
                <input asp-for="Gig.FormFile" type="file" accept="image/*" />
                <span asp-validation-for="Gig.FormFile"></span>
            </div>
            <h3>Gig</h3>
            <div class="form-group">
                <label asp-for="Gig.VenueID" class="control-label"></label>
                <select asp-for="Gig.VenueID" asp-items="Model.Venues" class="custom-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="Gig.Date" class="control-label"></label>
                <input asp-for="Gig.Date" class="form-control" placeholder="yyyy-mm-dd" />
                <span asp-validation-for="Gig.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-secondary" role="button" asp-page="Index">Cancel</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        setDateInputMinToToday("Gig.Date");
    </script>
}
