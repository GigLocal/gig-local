@page
@model GigLocal.Pages.Admin.Gigs.DeleteModel

@{
    ViewData["Title"] = "Delete Gig";
    ViewData["Description"] = "Delete a gig on Gig Local admin.";
    ViewData["Image"] = $"{HttpContext.Request.GetDisplayUrl()}/android-chrome-192x192.png";
    ViewData["Url"] = $"{HttpContext.Request.GetDisplayUrl()}/";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Gig</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.ArtistName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gig.ArtistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.VenueName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gig.VenueName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gig.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gig.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.EventUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gig.EventUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gig.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Gig.ImageUrl" height="150">
        </dd>
    </dl>

    <form method="post">
        <a class="btn btn-outline-secondary" role="button" asp-page="./Index">Cancel</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
