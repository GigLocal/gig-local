@page
@model GigLocal.Pages.Admin.Artists.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}

<h1>Details</h1>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Website)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Artist.ImageUrl" height="150">
        </dd>
    </dl>
</div>

<div class="form-group">
    <a class="btn btn-outline-secondary" role="button" asp-page="Index">Back</a>
    <a class="btn btn-primary" role="button" asp-page="./Edit" asp-route-id="@Model.Artist.ID">Edit</a>
</div>
