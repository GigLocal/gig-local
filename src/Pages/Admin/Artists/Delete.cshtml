@page
@model GigLocal.Pages.Admin.Artists.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Website)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Artist.ImageUrl" height="150">
        </dd>
    </dl>

    <form method="post">
        <a class="btn btn-outline-secondary" role="button" asp-page="Index">Cancel</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
