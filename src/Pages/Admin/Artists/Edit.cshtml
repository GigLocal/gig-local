@page
@model GigLocal.Pages.Admin.Artists.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<h1>Edit</h1>

<h4>Artist</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Artist.Name" class="control-label"></label>
                <input asp-for="Artist.Name" class="form-control" />
                <span asp-validation-for="Artist.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.Description" class="control-label"></label>
                <input asp-for="Artist.Description" class="form-control" />
                <span asp-validation-for="Artist.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.Genre" class="control-label"></label>
                <input asp-for="Artist.Genre" class="form-control" />
                <span asp-validation-for="Artist.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.Website" class="control-label"></label>
                <input asp-for="Artist.Website" class="form-control" />
                <span asp-validation-for="Artist.Website" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.FormFile"></label>
                <input asp-for="Artist.FormFile" type="file" accept="image/*" />
                <span asp-validation-for="Artist.FormFile"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-secondary" role="button" asp-page="./Index">Cancel</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
